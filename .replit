modules = ["python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["bash", "python313Packages.uvicorn"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Unified Server"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Streamlit Server"

[[workflows.workflow]]
name = "Streamlit Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "FastAPI Server"
author = 46012638
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uvicorn api_main:app --host 0.0.0.0 --port 8000 --reload"

[[workflows.workflow]]
name = "Unified Server"
author = 46012638
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[ports]]
localPort = 5000
externalPort = 80
